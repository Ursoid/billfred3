[account]
jid=
password=
room=
room_password=
nick=

[database]
database_path=

# Add section for every RSS feed
# prefix used as identifier in bot message
# url is URL of RSS feed
# time is interval between checks

# [rss_feed1]
# prefix = FEED1
# url = https://domain.tld/rss
# time = 600

# [rss_feed2]
# prefix = FEED2
# url = http://domain2.tld/rss.xml
# time = 300


# Logging config
[loggers]
keys = root,billfred,sleekxmpp

[handlers]
keys = console
# Enable additional handlers like this
# keys = console,mail,file

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

# Settings for sleekxmpp
[logger_sleekxmpp]
level = INFO
qualname = sleekxmpp
handlers = console
propagate = 0

[logger_billfred]
level = DEBUG
qualname = billfred
handlers = console
# handlers = file, mail
propagate = 0

[formatter_generic]
format = %(asctime)s %(levelname)s [%(name)s] %(message)s
datefmt = %Y-%m-%d %H:%M:%S

[handler_console]
class = StreamHandler
args = (sys.stderr,)
formatter = generic

